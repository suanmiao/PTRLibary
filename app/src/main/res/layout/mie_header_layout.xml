<?xml version="1.0" encoding="utf-8"?><!-- ListView的头部 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_contentLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_gift"
        android:text="@string/gift_text"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/gray_c7"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_below="@id/text_gift"
        android:src="@drawable/alpaca_body"
        android:paddingRight="120dp"
        android:id="@+id/ic_neck"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="240dp"/>

    <ImageView
        android:id="@+id/mie_head"
        android:background="@drawable/ic_alpaca_header"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/ic_neck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

</RelativeLayout>
