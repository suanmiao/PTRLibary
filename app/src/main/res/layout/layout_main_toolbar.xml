<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_base"
    android:layout_width="match_parent"
    app:contentInsetStart="0dp"
    app:contentInsetEnd="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="1dp"
    android:layout_height="@dimen/main_toolbar_height">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/ic_main_normal"
            android:background="@drawable/bg_action_bar_indicator_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/icon1"/>

        <ImageView
            android:id="@+id/ic_main_raindrop"
            android:background="@drawable/bg_action_bar_indicator_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/icon2"/>

        <ImageView
            android:id="@+id/ic_main_continuous"
            android:background="@drawable/bg_action_bar_indicator_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/icon3"/>

    </LinearLayout>
</android.support.v7.widget.Toolbar>

