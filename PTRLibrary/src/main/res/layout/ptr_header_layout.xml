<?xml version="1.0" encoding="utf-8"?><!-- ListView的头部 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_contentLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ptr_header_text_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/pull_to_refresh"
            android:textColor="#a3a3a3"
            android:textSize="15dip"/>

        <ImageView
            android:layout_toLeftOf="@+id/ptr_header_text_tip"
            android:layout_centerVertical="true"
            android:id="@+id/ptr_header_arrow"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/ptr_arrow"/>

        <ImageView
            android:layout_toLeftOf="@+id/ptr_header_text_tip"
            android:layout_centerVertical="true"
            android:id="@+id/ptr_header_circle"
            android:layout_height="20dip"
            android:layout_width="20dip"
            android:src="@drawable/ptr_circle"
            android:visibility="gone"/>

    </RelativeLayout>
</RelativeLayout>
